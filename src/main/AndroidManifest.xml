<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shimul.androidcontrol">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Remote Droid"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Remote Droid"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Keyboard"
            android:label="@string/title_activity_keyboard"
            android:theme="@style/AppTheme1">
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".SecondActivity"
            android:label="@string/title_activity_second"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Media"
            android:label="@string/title_activity_media"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Presentation"
            android:label="Presentation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Touchpad"
            android:label="Touchpad"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Power"
            android:label="Power"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Application"
            android:label="Application"
            android:theme="@style/AppTheme1">
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Website"
            android:label="Website"
            android:theme="@style/AppTheme1">
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Read"
            android:label="Read"
            android:screenOrientation="portrait" />
        <activity
            android:name=".VoiceRecognition"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Reading" />
        <activity android:name=".KeyboardReading"></activity>
    </application>

</manifest>